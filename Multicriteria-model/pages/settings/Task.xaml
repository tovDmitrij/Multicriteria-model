<Page x:Class="Multicriteria_model.pages.settings.Task"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Multicriteria_model.pages.settings"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Settings">
    <DockPanel LastChildFill="True" Background="AliceBlue">
        <Label DockPanel.Dock="Top" x:Name="label" Content="Выберите задачу" HorizontalAlignment="Center"/>
        <ComboBox DockPanel.Dock="Top" x:Name="productType" Width="160" HorizontalAlignment="Center" VerticalAlignment="Top" SelectionChanged="productType_SelectionChanged">
            <ComboBoxItem Content="Покупка видеокарты"/>
            <ComboBoxItem Content="Покупка процессора"/>
            <ComboBoxItem Content="Покупка оперативной памяти"/>
            <ComboBoxItem Content="Покупка жесткого диска"/>
            <ComboBoxItem Content="Покупка монитора"/>
        </ComboBox>
    </DockPanel>
</Page>
